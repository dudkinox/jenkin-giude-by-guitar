pipeline {
    agent any
    environment {
        ENV_JENKINS = '$BUILD_NUMBER'
        ENV_JENKINS_1 = "$BUILD_NUMBER"
    }
    stages {
        stage('Clone sources') {
            steps {
                git branch: 'main', url: 'https://github.com/dudkinox/jenkin-giude-by-guitar'
            }
        }
        stage('Check file list') {
            steps { 
                sh 'ls -l'
            }
        }
        stage('Show index.js') {
            steps { 
                sh """
                    cd src 
                    ls -l
                    cat index.js
                """
            }
        }
        stage('Test ENV'){
            environment {
                NODE_VERSION = '17.9'
            }
            def commitMessage = sh(script: 'git log -1 --pretty=%B', returnStdout: true).trim()

            def payload = [
                'content': commitMessage
            ]
            steps {
                sh 'printenv'
                sh 'echo $NODE_VERSION'
                sh 'echo $ENV_JENKINS'
                sh 'echo $ENV_JENKINS_1'
                sh "echo ${payload.content}"
            }
        }
    }
}
